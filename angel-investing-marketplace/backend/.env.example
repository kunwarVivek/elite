# Database
DATABASE_URL="postgresql://username:password@localhost:5432/angel_investing_marketplace"

# Authentication (Better Auth)
BETTER_AUTH_SECRET="your-super-secret-key-here"
BETTER_AUTH_URL="http://localhost:3001"

# JWT
JWT_SECRET="your-jwt-secret-key-here"

# Email Service (OPTIONAL - Has dev mode fallback using Ethereal Email)
# For Gmail: Enable 2FA, generate App Password
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"  # Gmail App Password (16 characters)
SMTP_FROM="Angel Investing Marketplace <noreply@yourdomain.com>"

# Alternative: SendGrid (recommended for production)
# SMTP_HOST="smtp.sendgrid.net"
# SMTP_PORT=587
# SMTP_USER="apikey"
# SMTP_PASS="SG.your-sendgrid-api-key"
# SMTP_FROM="Angel Investing Marketplace <noreply@yourdomain.com>"

# Alternative: AWS SES (best for scale)
# SMTP_HOST="email-smtp.us-east-1.amazonaws.com"
# SMTP_PORT=587
# SMTP_USER="your-ses-smtp-username"
# SMTP_PASS="your-ses-smtp-password"
# SMTP_FROM="Angel Investing Marketplace <noreply@yourdomain.com>"

# File Storage
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
S3_BUCKET_NAME="your-bucket-name"

# Payments (Stripe) - REQUIRED FOR SUBSCRIPTIONS
# Get keys from: https://dashboard.stripe.com/apikeys
STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"  # Use pk_live_ for production
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"  # Use sk_live_ for production
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"  # Get after setting up webhook endpoint

# Webhook Setup:
# 1. Go to Stripe Dashboard > Developers > Webhooks
# 2. Add endpoint: https://api.yourdomain.com/api/webhooks/stripe
# 3. Select events: subscription.*, invoice.*, payment_method.*, customer.*
# 4. Copy webhook signing secret to STRIPE_WEBHOOK_SECRET

# Banking (Plaid)
PLAID_CLIENT_ID="your_plaid_client_id"
PLAID_SECRET="your_plaid_secret"
PLAID_ENV="sandbox"

# Payment Configuration
PLATFORM_FEE_PERCENTAGE=5
SYNDICATE_FEE_PERCENTAGE=3
MINIMUM_INVESTMENT_AMOUNT=100
MAXIMUM_INVESTMENT_AMOUNT=1000000

# Escrow Configuration
ESCROW_HOLD_PERIOD_DAYS=30
REFUND_WINDOW_DAYS=7

# KYC/AML Configuration
KYC_VERIFICATION_THRESHOLD=10000
AML_SCREENING_THRESHOLD=50000

# Redis (for BullMQ)
REDIS_URL="redis://localhost:6379"

# Socket.IO
SOCKET_IO_CORS_ORIGIN="http://localhost:3000"

# Application
NODE_ENV="development"  # Options: development, production, test
PORT=3001
FRONTEND_URL="http://localhost:3000"  # or http://localhost:5173 for Vite
APP_URL="http://localhost:3000"  # Used by email system for generating links

# Production example:
# FRONTEND_URL="https://yourdomain.com"
# APP_URL="https://yourdomain.com"

# Logging
LOG_LEVEL="info"

# Security
BCRYPT_ROUNDS=12